# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{kt,kts}]
ij_kotlin_imports_layout = *
ij_kotlin_packages_to_use_import_on_demand =
ij_kotlin_name_count_to_use_import_on_demand = 3

[*.gradle.kts]
indent_size = 4

[*.xml]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false